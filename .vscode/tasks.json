{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Auto Git Pull",
            "type": "shell",
            "command": "git pull",
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                }
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent", //"never" for no notifcation 
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
            },
        {
            "label": "Build with Make",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "problemMatcher": [],
            "detail": "Runs make in build"
        }
    ]
}